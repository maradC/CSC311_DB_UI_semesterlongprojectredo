      <VBox alignment="CENTER" layoutX="50.0" layoutY="14.0" prefHeight="372.0" prefWidth="500.0" spacing="20.0" styleClass="about-container">
         <children>
            <ImageView fx:id="aboutImageView" fitHeight="150.0" fitWidth="250.0" styleClass="about-image" pickOnBounds="true" preserveRatio="true">
